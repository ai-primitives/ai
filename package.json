{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev --no-cache  --concurrency 16 --continue",
    "lint": "turbo lint",
    "prettier-check": "prettier --check \"**/*.{js,ts,tsx,md,mdx}\"",
    "prettier-fix": "prettier --write \"**/*.{js,ts,tsx,md,mdx}\"",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "workspaces": [
    "api/*",
    "docs",
    "data",
    "dash",
    "sdk/*",
    "web/*",
    "pkgs/*",
    "workflows"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 180,
    "semi": false,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@9.15.4"
}
