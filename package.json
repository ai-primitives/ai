{
  "private": true,
  "scripts": {
    "format": "prettier --write ."
  },
  "workspaces": [
    "api/*",
    "docs",
    "data",
    "dash",
    "sdk/*",
    "web/*",
    "pkgs/*",
    "workflows"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 180,
    "semi": false,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true
  }
}
